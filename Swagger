paths:
  /auth:
    post:
      summary: Autentica um usúario
      tags:
      - Publicos
      requestBody:
        content:
          application/json:
            schema:
              $ref: "#/components/schemas/LoginForm"
      responses:
        200:
          description: Sucesso
          content:
            application/jason:
              schema:
                $ref: "#/components/schemas/TokenDto"
        400:
          description:  Dados invalidos
          content:
            application/json:
              example: Bad Request


